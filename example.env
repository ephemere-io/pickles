# Notion API設定
# NotionからジャーナルエントリーをフェッチするためのAPIキー
# 取得方法: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here

# OpenAI API設定
# 感情分析と思考分析に使用
# 取得方法: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google API設定
# Google SheetsとGoogle Docs APIアクセス用のサービスアカウント鍵（JSON形式）
# 取得方法: Google Cloud Console > IAM > サービスアカウント
# 注意: JSON全体を1行で記述してください
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...@....iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# メール設定（レポート送信用）
# GmailのSMTP設定例（他のメールサービスを使用する場合は適宜変更）
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_TO=recipient@example.com
EMAIL_FROM=sender@example.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# オプション設定

# Google Docs入力（Notionの代わりにGoogle Docsを使用する場合）
# GOOGLE_DOCS_URL=https://docs.google.com/document/d/your_document_id/edit

# テストモード（開発・テスト時のみ使用）
# 1を設定するとモックデータを使用します
# PICKLES_TEST_MODE=1

# テスト用モックファイル指定（テスト時のみ）
# PICKLES_TEST_SPECIFIC_MOCK_FILE=mock_data_1.json
